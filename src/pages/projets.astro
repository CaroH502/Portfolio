  ---
  import Base from "@layouts/Base.astro";
  import { getEntryBySlug } from "astro:content";
  const entry = await getEntryBySlug("projects", "index");
  import { markdownify } from "@lib/utils/textConverter";  
  const { Content } = await entry.render();
  const { title, description, meta_title, image, projects} = entry.data;
  
  ---
  
  <Base
  title={title}
  meta_title={meta_title}
  description={description}
  image={image}
  >
  
  <section class="section">
    <div class="container px-6">
      <div class="content">
        <div class="flex justify-between">
          <h2 set:html= "Les projets réalisés à ce jour" class="h2 text-corail-100 text-left mb-8" />
          <img class="h-36 w-28" src="../../public/images/dragon3.png" alt="dargon"/>
        </div>
        <!-- Rendering Projects -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          {projects.map((project: any) => (
            <article class="mb-12">
              <div class={`projet shadow-xl mx-auto bg-${project.color}-100 transform duration-500 hover:-translate-y-2 cursor-pointer rounded-md`}>                
                <img src={project.image} class="mt-0 rounded max-w-full h-auto" alt={`Image of ${project.title}`} />
                <div class="p-6">
                <h1 class="text-3xl md:text-4xl font-extrabold text-gray-800 mb-4">{project.title}</h1>
                <p class="text-sm text-justify text-gray-700 mb-4">{project.description}</p>
                <div class="flex flex-col md:flex-row md:space-x-6">
                  <div class="flex-1 mb-2 md:mb-0">
                    <h3 class="font-semibold md:text-2xl">Tech</h3>
                    <p>{project.tech}</p>
                  </div>
                  <div class="flex-1 mb-2 md:mb-0">
                    <h3 class="font-semibold md:text-2xl">Rôle</h3>
                    <p>{project.role}</p>
                  </div>
                  <div class="flex-1">
                    <h3 class="font-semibold md:text-2xl">Année</h3>
                    <p>{project.year}</p>
                  </div>
                </div>
              </div>
              </div>
            </article>
            ))}
          </div>
        </div>
      </div>
    </section>
  </Base>

  <style>
    .projet { /* Remplacez .article-class par la classe réelle de vos articles */
    cursor: default !important;
}

  </style>
